@page
@using Microsoft.AspNetCore.Identity
@using DevExpress.Blazor;
@using WorkflowDiagram.UI.Blazor.Pages
@using WorkflowDiagram.UI.Blazor.ServiceModel;
@using WorkflowDiagram.UI.Blazor.Shared
@model WorkflowDiagram.UI.Blazor.Areas.Identity.Pages.Account.RegisterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="_content/DevExpress.Blazor.Themes/blazing-berry.bs5.min.css" rel="stylesheet" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="WorkflowDiagram.UI.Blazor.styles.css" rel="stylesheet" />
</head>

<body>
    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
        <div class="form">
            <component type="typeof(ServiceLogo)" render-mode="ServerPrerendered" />
            <div class="form-content">
                <div class="form-header-text">Sign up for your account</div>
                <div class="form-row-errors">
                    @foreach(string error in Model.Input.Errors) {
                        <div class="form-error">@error</div>
                    }
                </div>
                <div class="form-label">Login</div>
                <div class="form-editor"><input class="form-input" type="text" asp-for="Input.Login"></div>
                <div class="form-label">Email</div>
                <div class="form-editor"><input class="form-input" type="text" asp-for="Input.Email"></div>
                <div class="form-label">Password</div>
                <div class="form-editor"><input class="form-input" type="password" asp-for="Input.Password"></div>
                <div class="form-label">Confirm Password</div>
                <div class="form-editor"><input class="form-input" type="password" asp-for="Input.ConfirmPassword"></div>
                <div class="form-row align-right">
                    <button type="submit" class="form-button green-outline" >Register</button>
                </div>
            </div>
        </div>
    </form>
    @*<component type="typeof(SignUp)" render-mode="ServerPrerendered" param-Email="Model.Email" param-Password="Model.Password" param-Login="Model.Login"></component>*@
    <script src="_framework/blazor.server.js"></script>
</body>
